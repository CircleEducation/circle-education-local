{
  "name": "circle-education-local",
  "version": "1.0.0",
  "repository": "https://github.com/CircleEducation/circle-education-local",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "npm run configs && npm run css && npm run jekyll-build && npm run jekyll-build-amp && npm run optimize",
    "cname": "echo $(echo $JEKYLL_ENV)$(echo $KEY) >> _site/CNAME",
    "configs": "node _javascripts/configs.js",
    "css": "node _javascripts/postcss.js && cat assets/css/main.min.css > _includes/css.html",
    "deploy": "npm run cname && gh-pages --repo git@github.com:CircleEducation/$(echo $JEKYLL_ENV)$(echo $KEY).git -d ./_site -t",
    "encrypt": "set -e && find ./_site -type f -name '*.html' -exec staticrypt -f _javascripts/password_template.html {} $PASSWORD -o {} \\;",
    "favicon": "real-favicon generate _site/favicon.json faviconData.json assets/favicons/ && yarn favicon-inject",
    "favicon-inject": "echo '' > _includes/favicon.html && real-favicon inject faviconData.json assets/favicons _includes/favicon.html && sed -i'.original' -e 's/<html><head>//g' assets/favicons/favicon.html && sed -i'.original' -e 's/<\\/head><body><\\/body><\\/html>//g' assets/favicons/favicon.html && mv assets/favicons/favicon.html _includes/favicon.html",
    "html": "posthtml -c .posthtmlrc && sleep 4 && posthtml -c .posthtmlrc_2",
    "images": "sh resize.sh",
    "images-webp": "imagemin assets/uploads/* --out-dir=assets/uploads/ --plugin=webp",
    "jekyll-build": "bundle exec jekyll build --config _config.yml,_configs/$KEY.yml",
    "jekyll-build-amp": "bundle exec jekyll build --config _config.yml,_amp.yml,_configs/$KEY.yml --destination _site/amp/",
    "lint": "npm run lint-html && npm run lint-css",
    "lint-css": "stylelint ./**/*.css",
    "lint-html": "htmllint {*.html,./_includes/*.html,./_layouts/*.html,./partials/*.html}",
    "optimize": "npm run html && find _site/amp -name \"*.html\" | while read fname; do npx amp optimize \"$fname\" > \"$fname-temp\" && mv \"$fname-temp\" \"$fname\"; done",
    "pa11y": "pa11y-ci",
    "sitemap": "./node_modules/.bin/sitemap-generator https://$(echo $KEY) -v",
    "start": "JEKYLL_ENV='development' concurrently \"http-server _site -p 8080 -a 0.0.0.0 -s\" \"npm-watch\"",
    "test": "npm run lint"
  },
  "devDependencies": {
    "@ampproject/toolbox-cli": "^2.6.0",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@octokit/rest": "^18.0.6",
    "bootstrap": "^4.5.3",
    "change-case": "^4.1.1",
    "cli-real-favicon": "^0.0.8",
    "cloudflare": "^2.7.0",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "csv-parser": "^2.3.3",
    "front": "austincodingacademy/front#a51873d0901db4ff119c87215efaede0491c793d",
    "front-matter": "^4.0.2",
    "gh-pages": "^3.1.0",
    "htmllint-cli": "^0.0.4",
    "http-server": "^0.12.3",
    "imagemin-cli": "^6.0.0",
    "imagemin-webp": "^6.0.0",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "node-fetch": "^2.6.1",
    "npm-watch": "^0.7.0",
    "pa11y-ci": "^2.4.0",
    "postcss": "^8.1.1",
    "postcss-amp": "^2.0.1",
    "postcss-amp-custom": "^1.3.1",
    "postcss-each": "^0.10.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.1",
    "postcss-no-important": "^4.1.0",
    "posthtml-amp-img": "kevincolten/posthtml-amp-img",
    "posthtml-cli": "kevincolten/posthtml-cli#nested-paths",
    "posthtml-img-autosize": "kevincolten/posthtml-img-autosize#amp-img",
    "posthtml-webp": "^2.1.0",
    "qs": "^6.9.4",
    "sitemap-generator-cli": "^6.2.6",
    "staticrypt": "^1.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "url-parse": "^1.4.7",
    "yaml": "^1.10.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "./*"
      ],
      "extensions": "html,css,md",
      "ignore": [
        "_site",
        "node_modules",
        "assets/css/main.min.css",
        "_includes/css.html"
      ]
    }
  },
  "dependencies": {
    "await-timeout": "^1.1.1",
    "caniuse-lite": "^1.0.30001214",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1"
  }
}
